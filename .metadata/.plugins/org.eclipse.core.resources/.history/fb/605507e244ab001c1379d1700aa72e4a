
package com.tcs.dao;
import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Repository;

import com.tcs.model.CourseCatalog;
/**
 * @author springuser18
 *
 */
@Repository
public class CourseCatalogDao {
	// Dummy database. Initialize with some dummy values.
	private static List<CourseCatalog> coursecatalogs;
	{
		coursecatalogs = new ArrayList();
		coursecatalogs.add(new CourseCatalog(101, "English"));
		coursecatalogs.add(new CourseCatalog(201, "Maths"));
		coursecatalogs.add(new CourseCatalog(301, "Science"));
		coursecatalogs.add(new CourseCatalog(401, "Computer"));
	}
//List of customer Implementation
	public List list() {
		return coursecatalogs;
	}
//Get the customer details with id 
	
	public CourseCatalog get(Long id) {

		for (CourseCatalog e : coursecatalogs) {
			if (e.getId().equals(id)) {
				return e;
			}
		}
		return null;
	}
//Create CourseCatalog
	public CourseCatalog create(CourseCatalog coursecatalog) {
		coursecatalog.setId(System.currentTimeMillis());
		coursecatalogs.add(coursecatalog);
		return coursecatalog;
	}
	
//Delete coursecatalog
	
	public Long delete(Long id) {

		for (CourseCatalog c : coursecatalogs) {
			if (c.getId().equals(id)) {
				coursecatalogs.remove(c);
				return id;
				
			}
		}
		return null;
}
	
//Update CourseCatalog
	public CourseCatalog update(Long id, CourseCatalog coursecatalog) {

		for (CourseCatalog c : coursecatalogs) {
			if (c.getId().equals(id)) {
				coursecatalog.setId(c.getId());
				coursecatalogs.remove(c);
				coursecatalogs.add(coursecatalog);
				return coursecatalog;
			}
		}

		return null;
	}

}